<div class="row justify-space-between-md">
  <div class="new-post-card">
    <h2 class="page-title">Edit your existing post:</h2>
    <div class="hidden" id="post-id">{{post.id}}</div>
    <form class="form update-post-form" id = "update-post-form">
      <div class="form-group">
        <label for="title-update-post">Title:</label>
        <input class="form-input" type="text" id="title-input-update-post" placeholder="{{post.title}}" />
      </div>
      <div class="form-group">
        <label for="body-update-post">Body:</label>
        <input class="form-input" type="body" id="body-input-update-post" placeholder="{{post.postContent}}" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update Post</button>
      </div>
    </form>
  </div>

<script src="/js/edit.js"></script>